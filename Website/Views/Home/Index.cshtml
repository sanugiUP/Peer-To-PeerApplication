@{
   @using Website.Models;
   @model IEnumerable<Client>;
}

<h1 style="text-align:left">CLIENTS CONNECTED TO THE SERVER</h1>
<div id="tableview">
    <table>
        <tr>
            <th>CLIENT IP ADDRESS</th>
            <th>CLIENT PORT NUMBER</th>
            <th>JOBS COMPLETED</th>
        </tr>
        @foreach(var client in Model)
        {
            <tr>
                <td>@client.ipaddress</td>
                <td>@client.portnumber</td>
                <td>@client.jobscompleted</td>
            </tr>
        }
    </table>
</div>


